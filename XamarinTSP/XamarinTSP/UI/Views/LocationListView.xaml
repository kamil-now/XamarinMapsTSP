<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinTSP.UI.Views.LocationListView"
             xmlns:behaviors="clr-namespace:XamarinTSP.UI.Behaviors">
    <ContentView.Content>
        <ListView  x:Name="List"
                   Grid.Row="0"
                   MinimumHeightRequest="20"
                   Footer="{Binding }"
                   ItemsSource="{Binding Locations, UpdateSourceEventName=CollectionChanged}"
                   SelectedItem="{Binding SelectedLocation}">
            <ListView.Behaviors>
                <behaviors:EventToCommandBehavior EventName="ItemTapped"
                                                  Command="{Binding SelectCommand}" />
                <behaviors:ListViewAutoSizeBehavior/>
            </ListView.Behaviors>
            <ListView.FooterTemplate>
                <DataTemplate>
                    <Button
                        Margin="5"
                        WidthRequest="40" 
                        HeightRequest="40" 
                        BorderRadius="20"
                        BorderColor="Black"
                        BorderWidth="2"
                        Text="+"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        BackgroundColor="LightGray"
                        FontSize="Medium"
                        Command="{Binding AddLocationCommand}"/>
                </DataTemplate>
            </ListView.FooterTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Entry  Grid.Column="0" 
                                        Text="{Binding Name}" 
                                        FontSize="Small"/>
                                <Button Grid.Column="1"
                                        FontSize="Medium"
                                        FontAttributes="Bold"
                                        Text="&#x2715;"
                                        BackgroundColor="Transparent"
                                        BorderColor="Transparent"
                                        CommandParameter="{Binding}"
                                        Command="{Binding Path=BindingContext.DeleteCommand, Source={x:Reference Name=List}}" />

                            </Grid>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </ContentView.Content>
</ContentView>